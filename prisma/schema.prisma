generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Foydalanuvchi
model User {
  id         Int        @id @default(autoincrement())
  telegramId String        @unique
  username   String?
  phone      String?    @unique
  expenses   Expense[]
  incomes    Income[]
  reminders  Reminder[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Expense {
  id         Int      @id @default(autoincrement())
  name       String
  amount     Float
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([categoryId])
  @@index([createdAt])
}

model Income {
  id        Int      @id @default(autoincrement())
  source    String
  amount    Float
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

// Kategoriya
model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  expenses Expense[]

  @@index([name])
}

// Eslatmalar 
model Reminder {
  id        Int          @id @default(autoincrement())
  user      User         @relation(fields: [userId], references: [id])
  userId    Int
  type      ReminderType
  limit     Float?
  message   String?
  createdAt DateTime     @default(now())
  notifyAt  DateTime?

  @@index([userId])
  @@index([notifyAt])
  @@index([type])
}

enum ReminderType {
  EXPENSE_LIMIT
  CUSTOM
}
